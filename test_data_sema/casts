proc casts() {
	i := 0
	by := cast(byte) i
	i = cast(int) by
	i = cast(int) true
	by = cast(byte) true
	bptr := cast(*bool) &i
}
======
proc casts
	var i int
	var by byte
	var bptr *bool
{
	i = 0
	by = cast(byte, i)
	i = cast(int, by)
	i = cast(int, true)
	by = cast(byte, true)
	bptr = cast(*bool, (&i))
}
